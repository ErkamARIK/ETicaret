@model List<ETicaret.Models.CreditCard>
@{
    ViewData["Title"] = "Kartlarım";
}

<div class="container mt-4">
    <h2>Kayıtlı Kartlar</h2>
    <a href="/Account/AddCard" class="btn btn-primary mb-3">Yeni Kart Ekle</a>

    @if (Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Kart Sahibi</th>
                    <th>Kart Numarası</th>
                    <th>Son Kullanma</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var card in Model)
            {
                <tr>
                    <td>@card.CardHolder</td>
                    <td>**** **** **** @card.CardNumber.Substring(card.CardNumber.Length - 4)</td>
                    <td>@card.Expiration</td>
                    <td>
                        <a href="/Account/EditCard/@card.Id" class="btn btn-sm btn-warning me-2">Düzenle</a>
                        <form asp-action="DeleteCard" asp-route-id="@card.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Kartı silmek istiyor musunuz?')">Sil</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>Henüz kayıtlı bir kartınız yok.</p>
    }
</div>
