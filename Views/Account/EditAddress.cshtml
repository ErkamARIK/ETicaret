@model ETicaret.Models.Address
@{
    ViewData["Title"] = "Adres Düzenle";
}

<div class="container mt-4">
    <h2>Adres Düzenle</h2>

    <form asp-action="EditAddress" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Açık Adres</label>
            <textarea asp-for="FullAddress" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">İl</label>
            <input asp-for="City" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a href="/Account/Addresses" class="btn btn-secondary">İptal</a>
    </form>
</div>
