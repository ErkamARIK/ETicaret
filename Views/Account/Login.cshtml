@model ETicaret.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Admin Girişi";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center mb-4">Admin Girişi</h2>

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
        </div>

        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        <div class="mt-3 text-center">
            <p>Hesabınız yok mu? <a href="/Account/Register">Kayıt Ol</a></p>
        </div>


        <div class="text-danger mt-2">
            @Html.ValidationSummary(false)
        </div>
    </form>
</div>

<partial name="_ValidationScriptsPartial" />
