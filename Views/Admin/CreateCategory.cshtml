@model ETicaret.Models.Category
@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="container mt-4">
    <h2>Yeni Kategori Ekle</h2>

    <form asp-action="CreateCategory" method="post">
        <div class="mb-3">
            <label class="form-label">Kategori Adı</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a href="/Admin/Categories" class="btn btn-secondary">İptal</a>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">Kategori adı zorunludur.</div>
    }

    <partial name="_ValidationScriptsPartial" />
</div>
