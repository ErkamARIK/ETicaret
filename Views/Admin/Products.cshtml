@model List<ETicaret.Models.Product>
@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container mt-4">
    <h2>Ürün Listesi</h2>
    <a href="/Admin/CreateProduct" class="btn btn-success mb-3 me-2">Yeni Ürün Ekle</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Fiyat</th>
                <th>Kategori</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price ₺</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a href="/Admin/EditProduct/@item.Id" class="btn btn-sm btn-warning">Düzenle</a>

                    <form asp-action="DeleteProduct" method="post" class="d-inline" onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                    </form>
                </td>

            </tr>
        }
        </tbody>
    </table>
</div>
