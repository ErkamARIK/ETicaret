<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - E-Ticaret</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<ETicaret.Models.ApplicationUser> SignInManager
</head>
<style>
    .product-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 6px;
    }
</style>
<style>
    .banner-img {
        aspect-ratio: 24 / 9;
        width: 100%;
        object-fit: cover;
        border-radius: 0.5rem;
    }
</style>

<body>
    <header class="border-bottom shadow-sm mb-4">
        
        <div class="container py-2 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <a href="/" class="d-flex align-items-center text-dark text-decoration-none me-4">
                    <img src="/images/logo.svg" alt="Logo" width="100" height="55" class="me-2" />
                    
                </a>

                <form method="get" action="/Product/Search" class="d-flex">
                    <input class="form-control me-2" type="search" name="query" placeholder="Ürün ara..." aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Ara</button>
                </form>
            </div>

            <div>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a href="/Account/Profile" class="btn btn-outline-dark me-2">Profil</a>
                    <a href="/Account/Logout" class="btn btn-outline-danger me-2">Çıkış Yap</a>
                }
                else
                {
                    <a href="/Account/Login" class="btn btn-outline-primary me-2">Giriş Yap</a>
                }
                <a href="/Cart" class="btn btn-outline-secondary">Sepet</a>
            </div>
        </div>

        
        @inject ETicaret.Data.ApplicationDbContext db
        @{
            var allCategories = db.Categories.ToList();
            var firstCategories = allCategories.Take(9).ToList();
            var remainingCategories = allCategories.Skip(9).ToList();
        }

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCategories" aria-controls="navbarCategories" aria-expanded="false" aria-label="Menüyü Aç">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCategories">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @foreach (var category in firstCategories)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Product/Category/@category.Id">@category.Name</a>
                            </li>
                        }

                        @if (remainingCategories.Any())
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="moreCategoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    DİĞER KATEGORİLER
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="moreCategoriesDropdown">
                                    @foreach (var category in remainingCategories)
                                    {
                                        <li>
                                            <a class="dropdown-item" href="/Product/Category/@category.Id">@category.Name</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    
    @inject ETicaret.Data.ApplicationDbContext db
    @{
        var banners = db.Banners.ToList();
        var isHomePage = Context.Request.Path == "/";
    }

    @if (isHomePage && banners.Any())
    {
        <div class="container my-3">
            <div id="bannerCarousel" class="carousel slide carousel-fade shadow-sm rounded" data-bs-ride="carousel" data-bs-interval="5000">
                <div class="carousel-inner">
                    @for (int i = 0; i < banners.Count; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@banners[i].ImageUrl" class="d-block w-100 rounded banner-img" alt="Banner @(i+1)">
                        </div>
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Önceki</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Sonraki</span>
                </button>
            </div>
        </div>
    }
    <main class="container mb-5">
        @RenderBody()
    </main>

    <footer class="bg-light text-dark pt-3 pb-2 border-top mt-5">
    <div class="container">
        <div class="row text-sm">

            <div class="col-md-4 mb-2">
                <h6>Hakkımızda</h6>
                <p class="small mb-1">Uygun fiyat ve hızlı kargo ile kaliteli ürünler sunan e-ticaret platformu.</p>
            </div>

            <div class="col-md-4 mb-2">
                <h6>İletişim</h6>
                <ul class="list-unstyled small mb-1">
                    <li>Kayseri, Türkiye</li>
                    <li>+90 555 123 45 67</li>
                    <li>info@gmail.com</li>
                </ul>
            </div>

            <div class="col-md-4 mb-2">
                <h6>Bağlantılar</h6>
                <ul class="list-unstyled small mb-1">
                    <li><a href="/" class="text-dark text-decoration-none">Ana Sayfa</a></li>
                    <li><a href="/Account/Profile" class="text-dark text-decoration-none">Hesabım</a></li>
                    <li><a href="/Cart" class="text-dark text-decoration-none">Sepetim</a></li>
                    <li><a href="/Admin" class="text-dark text-decoration-none">Admin Paneli</a></li>
                </ul>
            </div>

        </div>
        <div class="text-center pt-2 border-top">
            <p class="mb-0 small">&copy; @DateTime.Now.Year - E-Ticaret Sitesi</p>
        </div>
    </div>
</footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
